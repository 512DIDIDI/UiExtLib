<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activityMainShowDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/activityMainCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="close loading"
        app:layout_constraintTop_toBottomOf="@id/activityMainShowDialog"/>
    <Button
        android:id="@+id/activityMainShowSnackBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show snackBar"
        app:layout_constraintTop_toBottomOf="@id/activityMainCloseDialog"/>
    <Button
        android:id="@+id/activityMainBrushView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="brush view"
        app:layout_constraintTop_toBottomOf="@id/activityMainShowSnackBar"/>

</androidx.constraintlayout.widget.ConstraintLayout>